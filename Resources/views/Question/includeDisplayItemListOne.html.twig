{# purpose of this template: inclusion template for display of related questions #}
{% set hasAdminPermission = hasPermission('ZikulaTrivialModule:Question:', '::', 'ACCESS_EDIT') %}
{% if noLink is not defined %}
    {% set noLink = false %}
{% endif %}
<h4>
{% spaceless %}
{% if not noLink %}
    <a href="{{ path('zikulatrivialmodule_question_' ~ routeArea ~ 'display', {'id': item.getId()}) }}" title="{{ item|zikulatrivialmodule_formattedTitle|e('html_attr') }}">
{% endif %}
    {{ item|zikulatrivialmodule_formattedTitle }}
{% if not noLink %}
    </a>
    <a id="questionItem{{ item.getKey() }}Display" href="{{ path('zikulatrivialmodule_question_' ~ routeArea ~ 'display', {'id': item.getId(), raw: 1}) }}" title="{{ __('Open quick view window') }}" class="zikulatrivial-inline-window hidden" data-modal-title="{{ item|zikulatrivialmodule_formattedTitle|e('html_attr') }}"><i class="fa fa-id-card-o"></i></a>
{% endif %}
{% endspaceless %}
</h4>
